<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">


	<bean id="viewResolver"	class="org.springframework.web.servlet.view.InternalResourceViewResolver">

		<property name="prefix" value="/WEB-INF/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>
	
	<!-- 이미지 불러오기(namespaces에서 mvc 추가 후 진행 )-->
	<mvc:annotation-driven></mvc:annotation-driven>
	<mvc:resources location="/WEB-INF/img/" mapping="/img/**"></mvc:resources>
	<mvc:resources location="/WEB-INF/js/" mapping="/js/**"></mvc:resources>
	
	<!-- <bean id="mainController" class="main.controller.MainController"></bean> -->
<context:component-scan base-package="main.controller"></context:component-scan>
<context:component-scan base-package="user.controller"></context:component-scan> <!-- @Component 쓸려면 -->
</beans>
